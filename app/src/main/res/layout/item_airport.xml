<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/airplane_svgrepo_com"
        android:contentDescription="Icon Airport"
        android:layout_marginStart="10dp"
        android:layout_gravity="start|center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Tên sân bay và mã sân bay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/airport_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_medium"
                android:text="Tên sân bay"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/airport_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="SGN"
                android:textColor="#737272"/>
        </LinearLayout>

        <!-- Địa điểm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/airport_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="TP HCM, Việt Nam"
                android:textColor="#737272"
                android:layout_marginStart="10dp"/>

            <!-- Thêm Spacer với trọng số (weight) để đẩy TextView thứ hai ra lề phải -->
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Quốc tế"
                android:textColor="#892F4A"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
