<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/confirm_layout_shape"
    android:padding="16dp">

    <!-- Dấu gạch ngang trên cùng -->
    <View
        android:id="@+id/handle_view"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@color/purple"
        android:layout_marginBottom="12dp"
        android:shape="oval" />

    <!-- Tiêu đề THÊM HÀNH KHÁCH -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THÊM HÀNH KHÁCH"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"/>

    <!-- Đường gạch ngang -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        android:alpha="0.5" />

    <!-- Người lớn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/people_svgrepo_com" />

        <LinearLayout
            android:id="@+id/adult"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Title (From) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:letterSpacing="0.02"
                android:text="Người lớn"
                android:textSize="18sp" />

            <!-- City Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:text="Trên 12 tuổi"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnMinusAdult"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:text="−"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/txtAdultCount" />

        <Button
            android:id="@+id/btnPlusAdult"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>

    <!-- Trẻ em -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baby_svgrepo_com" />

        <LinearLayout
            android:id="@+id/baby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Title (From) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:letterSpacing="0.02"
                android:text="Trẻ em"
                android:textSize="18sp" />

            <!-- City Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Từ 2 - 11 tuổi"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnMinusChild"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:text="−"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/txtChildCount" />

        <Button
            android:id="@+id/btnPlusChild"
            android:layout_width="57dp"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>

    <!-- Em bé -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baby_11_svgrepo_com" />

        <LinearLayout
            android:id="@+id/infrant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Title (From) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:letterSpacing="0.02"
                android:text="Em bé"
                android:textSize="18sp" />

            <!-- City Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Dưới 2 tuổi"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnMinusInfant"
            android:layout_width="61dp"
            android:layout_height="40dp"
            android:text="−"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/txtInfantCount" />

        <Button
            android:id="@+id/btnPlusInfant"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>

    <!-- Nút Hủy và Chọn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:textColor="@color/purple"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/btnCancel"
            android:backgroundTint="#E6E6E6"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnSelect"
            android:backgroundTint="@color/purple"/>
    </LinearLayout>

</LinearLayout>
