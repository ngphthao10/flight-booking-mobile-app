<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/confirm_layout_shape">

    <!-- Dấu gạch ngang trên cùng -->
    <View
        android:id="@+id/handle_view"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@color/purple"
        android:layout_marginBottom="12dp"
        android:shape="oval" />


    <!-- Header Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HẠNG GHẾ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/nunito_extrabold"
        android:paddingBottom="16dp"
        android:layout_marginTop="5dp"/>

    <!-- Đường gạch ngang -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        android:alpha="0.5" />


    <!-- RadioGroup for options -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/radio_button_selector">
            <RadioButton
                android:id="@+id/rbEconomy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extrabold"
                android:text=" Economy"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bay tiết kiệm, đáp ứng mọi nhu cầu cơ bản của bạn."
                android:textSize="14sp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="38dp"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>



        <!-- Business Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/radio_button_selector"
            android:layout_marginTop="10dp">
            <RadioButton
                android:id="@+id/rbBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Business"
                android:fontFamily="@font/nunito_extrabold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bay đẳng cấp, với quầy làm thủ tục và khu ghế ngồi riêng."
                android:textSize="14sp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="38dp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

    </RadioGroup>

</LinearLayout>
